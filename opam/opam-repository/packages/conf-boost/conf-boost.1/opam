opam-version: "2.0"
maintainer: "thierry.martinez@inria.fr"
homepage: "http://www.boost.org"
authors: "Beman Dawes, David Abrahams, et al."
bug-reports: "https://github.com/ocaml/opam-repository/issues"
license: "MIT"
build: [
  ["bash" "-c" "
    if [ ! -d /usr/x86_64-w64-mingw32/sys-root/mingw/include/boost ]; then
      echo 'Creating symlink for Boost headers in MinGW sysroot...'
      if [ -d /usr/include/boost ]; then
        mkdir -p /usr/x86_64-w64-mingw32/sys-root/mingw/include &&
        ln -s /usr/include/boost /usr/x86_64-w64-mingw32/sys-root/mingw/include/boost &&
        echo 'Boost symlink created successfully'
      else
        echo 'ERROR: Boost not found in /usr/include/boost'
        exit 1
      fi
    else
      echo 'Boost headers already present in MinGW sysroot'
    fi
  "] {os = "win32" & os-distribution = "cygwinports"}
]
depexts: [
  ["libboost-dev"] {os-family = "debian" | os-family = "ubuntu"}
  ["boost"] {os-distribution = "nixos"}
  ["boost-dev"] {os-distribution = "alpine"}
  ["boost-devel"] {os-family = "fedora"}
  ["boost-devel"] {os-distribution = "ol"}
  ["boost-devel"] {os-distribution = "centos"}
  ["boost-devel"] {os-distribution = "rhel"}
  ["boost-devel"] {os-family = "suse" | os-family = "opensuse"}
  ["boost"] {os-distribution = "arch"}
  ["boost"] {os = "macos" & os-distribution = "homebrew"}
  ["boost"] {os-distribution = "macports" & os = "macos"}
  ["boost-all"] {os = "freebsd"}
  ["boost"] {os = "win32" & os-distribution = "cygwinports"}
  ["boost"] {os = "netbsd"}
  ["boost"] {os = "openbsd"}
]
synopsis: "Virtual package relying on boost"
description:
  "This package can only install if the boost library is installed on the system."
flags: conf